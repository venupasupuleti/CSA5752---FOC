#include<stdio.h>
int main()
{
	int i,n,a[20],rem,temp,sum = 0;
	printf("enter an integer:");
	scanf("%d",&n);
	temp = n;
	while(n!=0)
	{
		rem = n % 10;
		a[i] = rem;
		i++;
		sum = sum + rem;
		n = n/10;
	}
	printf("the digits of %d:",temp);
	for(i=i-1;i>-1;i--)
	printf("%d ",a[i]);
	printf("\n");
	printf("the sum of the digits :%d\n",sum);
	
}
OUTPUT:
enter an integer:234
the digits of 234:2 3 4
the sum of the digits :9
